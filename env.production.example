# Configuration de production pour Fi.A.Ma.Sa.M
# Copiez ce fichier vers .env et configurez les valeurs

# Base de données MySQL de production
DATABASE_URL="mysql://username:password@localhost:3306/fiamasam_production"

# NextAuth.js
NEXTAUTH_URL="https://votre-domaine.com"
NEXTAUTH_SECRET="votre-secret-super-securise-de-32-caracteres-minimum"

# Configuration SMTP pour les emails
SMTP_HOST="smtp.votre-fournisseur.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="votre-email@domaine.com"
SMTP_PASS="votre-mot-de-passe-smtp"
EMAIL_FROM="Fi.A.Ma.Sa.M <noreply@votre-domaine.com>"

# Optionnel: Pour les serveurs SMTP avec certificats auto-signés
# SMTP_TLS_INSECURE="false"

# URL publique de votre site (pour les emails et uploads)
NEXT_PUBLIC_URL="https://votre-domaine.com"
